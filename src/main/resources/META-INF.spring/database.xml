         <aop:pointcut id="txPointcut" expression="execution(* com.mycompany.webspring.dao.*.find*(..)"/>
         <aop:advisor advice-ref="txAdvice" pointcut-ref="txPointcut"/>
     </aop:config>
     <tx:advice id="txAdvice">
         <tx:attributes>  
         <tx:method name="find*" read-only="true"/>
         </tx:attributes>
     </tx:advice>-->
</beans>
